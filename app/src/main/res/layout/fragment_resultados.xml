<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar goles"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etJugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del jugador"
        android:layout_marginTop="8dp" />

    <!-- Minuto -->
    <EditText
        android:id="@+id/etMinuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minuto del gol"
        android:inputType="number"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAgregarGol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar gol"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado: 0 - 0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnGuardarResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar resultado"
        android:layout_marginTop="8dp" />

</LinearLayout>
